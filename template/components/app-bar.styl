.app-bar
  display flex
  align-items center
  position fixed
  height 56px
  padding 12px 10px
  top 0
  left 0
  right 0
  z-index 1
  background-color transparent
  transition all 0.3s ease-in-out
  color rgba(255, 255, 255, 0.8)
  text-shadow 0 0 5px rgba(0,0,0,1), 0 0 1px rgba(0,0,0,1)
  shadow-0()

.app-bar_opaque
  shadow-1()
  primary-block()
  text-shadow 0 0 5px rgba(0,0,0,.2)

.app-bar__spacer
  flex-grow 1
  flex-shrink 1

.app-bar__title
  margin 0
  padding 0
  height 3.6rem
  line-height 3.6rem

.app-bar__title-link
  &, &:visited
    height 3.6rem
    line-height 3.6rem
    margin 0
    padding 0 $sizeL
    display inline-block
    font-weight 800
    font-size 2.0rem
    color $text_default_light
    text-decoration none
    vertical-align top

.app-bar__about-link
  &, &:visited
    height 3.6rem
    line-height 3.6rem
    margin 0
    padding 0 $sizeL
    color $text_default_light
    text-decoration none
    vertical-align top
    display none
    +gt-sm()
      display inline-block
