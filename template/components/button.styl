.button
  display inline-block
  height 48px
  padding 6px 0
  text-align center
  border none
  background transparent
  text-transform uppercase
  font-size 14px
  font-weight 500
  user-select none

.button_disabled
  cursor not-allowed
  .button__inner-wrapper
      color $text_disabled
  .button__icon
    opacity $opacity_disabled

// Visual styles
.button_style_primary
  &.button_disabled
    .button__inner-wrapper
      box-shadow none
      background-color rgba(0,0,0,.12)
      color rgba(0,0,0,.26)
  .button__inner-wrapper
    primary-block()
    shadow-1()

.button_style_flat
  &, &:visited
    color $text_default_dark

.button_style_flat-accent
  &, &:visited
    color $accent

.button__inner-wrapper
  border-radius 2px
  display inline-block
  height: 36px
  line-height 36px
  padding 0 16px

.button__icon
  opacity $opacity_primary
  vertical-align middle
